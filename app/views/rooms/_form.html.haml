= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{t 'have_errors'} :"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li = msg
  .field
    = f.label t 'name'
    = f.text_field :name
  .field
    = f.label t 'locked_room'
    = f.check_box :locked
  = f.submit t 'save'